{{ blok._editable }}
<div class="booking">
  <h3 style="color: {{ blok.color }}">
    {{ blok.title }}
  </h3>
  <h4>
    {{ blok.sub_title }}
  </h4>
  <h3>
    {{ blok.time | newline_to_br }}
  </h3>
  <p>
    {{ blok.pricing | newline_to_br }}
  </p>
  <div class="booking__cta">
    <a class="btn" href="{{ blok.cta_link | url }}?subject={{ blok.contact_text | url_encode }}#contact__anchor">
      {{ blok.cta }}
    </a>
  </div>
</div>
